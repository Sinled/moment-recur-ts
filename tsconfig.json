{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["ES2015", "ES2016.Array.Include", "ES2017.object", "dom"],
    "downlevelIteration": true,

    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "outDir": "dist",
    "declarationDir": "dist/types",
    "sourceMap": true,
    "declaration": true,
    "stripInternal": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
